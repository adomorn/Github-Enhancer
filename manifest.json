{
  "manifest_version": 3,
  "name": "Github Enhancer",
  "version": "1.0",
  "description": "A browser extension that enhances GitHub by displaying full dates and detailed contributor information",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://github.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "css": [
        "content.css"
      ],
      "js": [
        "utils.js",
        "settings.js",
        "dateTimeEnhancer.js",
        "contributorEnhancer.js",
        "content.js"
      ]
    }
  ],
  "action": {
    "default_icon": {
      "128": "icon.svg"
    }
  },
  "icons": {
    "16": "16.png",
    "32": "32.png",
    "48": "48.png",
    "128": "128.png"
  }
}